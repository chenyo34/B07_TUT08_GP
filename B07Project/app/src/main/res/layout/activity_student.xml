<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".StudentActivity">

    <Button
        android:id="@+id/stuActTakenCourseDisplayButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TakenCourseDisplay"
        android:layout_above="@id/stuActGenerateTimelineButton"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/stuActLogOutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="logOut"
        android:layout_below="@id/stuActGenerateTimelineButton"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:id="@+id/stuActGenerateTimelineButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ToGenerateTimeline"
        android:layout_centerInParent="true"
        android:layout_marginVertical="50dp"/>
</RelativeLayout>