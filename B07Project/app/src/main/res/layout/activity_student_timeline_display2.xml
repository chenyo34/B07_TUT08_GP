<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AdminListDisplay">


    <TextView
        android:id="@+id/student_timeline_DisplayTextView"
        android:text="Select wanted Course"
        android:textSize="32sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        />

    <Button
        android:id="@+id/timeline_submit_button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="2dp"
        android:layout_marginStart="2dp"
        android:layout_marginBottom="10dp"
        android:clickable="true"
        android:onClick="onFabClick"
        android:text="@string/timeline_submit_button2" />

    <ListView
        android:id="@+id/listview_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:choiceMode="multipleChoice"
        android:layout_below="@id/student_timeline_DisplayTextView"
        android:layout_above="@id/timeline_submit_button2" />

</RelativeLayout>